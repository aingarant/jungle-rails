<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  <div>

 <%
=begin%>
 If product is sold out, display sold out button and disable Add button.  
<%
=end%>

   <% if product.quantity == 0 %>
      <span class="soldout user-select-none">Sold Out</span>
      <button type="button" class="btn" disabled>Add</button>
    <% else %>
  
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn' ,
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
    <% end %>
     <% end %>
  </div>
</article>
