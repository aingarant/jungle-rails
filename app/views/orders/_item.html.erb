<tr>
  <td>



     <%= image_tag Product.find(item.product_id).image.tiny.url %>

  </td>

  <td>
    <h4><%= Product.find(item.product_id).name  %></h4>
    <br>
    <p><%= Product.find(item.product_id).description%> </p> 
  </td>

  <td>
    <%= humanized_money_with_symbol Product.find(item.product_id).price %>
  </td>

  <td>
    <%= item.quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol Product.find(item.product_id).price * item.quantity %>
  </td>
</tr>